# Application
ENV=development
DEBUG=true
HOST=0.0.0.0
PORT=8000

# RabbitMQ
RABBITMQ_URL=amqp://guest:guest@localhost:5672

# Database (for updating job status)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/fashion_ai_dev

# Storage (MinIO)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=fashion-ai-dev
MINIO_SECURE=false

# Redis
REDIS_URL=redis://localhost:6379

# AI - Gemini 2.5 Flash (Recommended)
LLM_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.5-flash-preview-04-17
GEMINI_VISION_MODEL=gemini-2.5-flash-preview-04-17

# OpenAI (Alternative/Backup)
# OPENAI_API_KEY=your-openai-api-key

# AI Models Path (for local models like VITON-HD)
AI_MODEL_PATH=./models
VITON_MODEL=viton-hd

# Rate Limiting
MAX_TRYON_PER_MINUTE=5
MAX_SIZE_REC_PER_MINUTE=20
MAX_CHAT_PER_MINUTE=30

# Chat Settings
CHAT_MAX_HISTORY=20
CHAT_SESSION_TTL=3600
