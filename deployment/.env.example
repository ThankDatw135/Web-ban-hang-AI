# ============================================
# Fashion AI E-commerce - Environment Variables
# ============================================
# ⚠️ HƯỚNG DẪN:
# 1. Copy file này thành .env
# 2. Thay đổi TẤT CẢ các giá trị bên dưới
# 3. KHÔNG commit file .env lên git
# ============================================

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DB_USER=your_db_user
DB_PASSWORD=your_strong_db_password_here
DB_NAME=fashion_ai

# ============================================
# REDIS
# ============================================
REDIS_PASSWORD=your_strong_redis_password_here

# ============================================
# RABBITMQ
# ============================================
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASS=your_strong_rabbitmq_password_here

# ============================================
# MINIO / S3 STORAGE
# ============================================
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_strong_minio_secret_here
S3_BUCKET=fashion-ai

# ============================================
# JWT AUTHENTICATION
# Sử dụng: openssl rand -base64 32
# ============================================
JWT_SECRET=generate_a_random_32_char_string_here
JWT_REFRESH_SECRET=generate_another_random_32_char_string

# ============================================
# AI / LLM CONFIGURATION
# ============================================
LLM_PROVIDER=gemini
GEMINI_API_KEY=your_gemini_api_key_from_google_ai_studio
# OPENAI_API_KEY=your_openai_api_key

# ============================================
# PAYMENT - MOMO (Sandbox/Production)
# Lấy từ: https://business.momo.vn
# ============================================
MOMO_PARTNER_CODE=your_momo_partner_code
MOMO_ACCESS_KEY=your_momo_access_key
MOMO_SECRET_KEY=your_momo_secret_key
MOMO_ENDPOINT=https://test-payment.momo.vn/v2/gateway/api

# ============================================
# PAYMENT - ZALOPAY (Sandbox/Production)
# Lấy từ: https://sandbox.zalopay.vn
# ============================================
ZALOPAY_APP_ID=your_zalopay_app_id
ZALOPAY_KEY1=your_zalopay_key1
ZALOPAY_KEY2=your_zalopay_key2
ZALOPAY_ENDPOINT=https://sb-openapi.zalopay.vn/v2

# ============================================
# APPLICATION URLs
# ============================================
NODE_ENV=development
CORS_ORIGINS=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3001/api
NEXT_PUBLIC_WS_URL=ws://localhost:3001
NEXT_PUBLIC_STORAGE_URL=http://localhost:9000/fashion-ai


# Email Configuration
# Get Gmail App Password: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_FROM=UTH-ConfMS <your_email@gmail.com>

# OTP & Password Reset
OTP_TTL_MINUTES=5
RESET_PASSWORD_TTL_MINUTES=15