{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "types": [
            "jest",
            "node",
            "@testing-library/jest-dom"
        ]
    },
    "include": [
        "src/**/__tests__/**/*.ts",
        "src/**/__tests__/**/*.tsx",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "jest.setup.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}